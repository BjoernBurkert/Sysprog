#include <stdio.h>
#include <stdlib.h> /* calloc, malloc, free */

int main(int argc, char *argv[])
{
    char** a; /* Stringfeld n */
    char *b; /* String-Zeiger b */
    int n;
    int i ,r;
    
    if (argc != 2)
    {
        printf("Aufruf: Stringsort Anzahl \n");
        return 1;
        
    }
    
    n = atoi(argv[1]);
    a = (char**) malloc (n*sizeof (char*));
    
    if(a == NULL)
    {
        printf("Kein freier Speicher vorhanden! \n");
        return 1;
        
    }
    
    srand((unsigned int) time(NULL));
   
    printf("Unsortiertes Feld:");
    
    for(i = 0; i < n; ++i)
    {
        r = rand();
        sprintf(rand(), i);
        r = (char**) malloc (n*sizeof (char*));
    }
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
}